{
    "manifest_version": 2,

    "name": "Spotify Remote",
    "description": "Provides a browser action for controlling an open spotify tab.",
    "version": "0.5",

    "icons": {
	"32": "icon.png"
    },

    "permissions": [
	"https://play.spotify.com/",
	"http://ws.spotify.com/lookup/*"
    ],
    "browser_action": {
	"default_icon": "icon.png",
	"default_popup": "popup.html"
    },
    "content_scripts": [
	{
	    "matches": ["https://play.spotify.com/*"],
	    "js": [ "js/content.js" ]
	}
    ],
    "background": {
	"scripts": ["js/bg.js"]
    }
}
